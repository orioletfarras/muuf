{
  "expo": {
    "name": "MUUF",
    "slug": "muuf",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "muuf",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "La app necesita acceso a tu galería para que puedas subir una foto de perfil",
        "NSCameraUsageDescription": "La app necesita acceso a tu cámara para que puedas tomar una foto de perfil"
      },
      "bundleIdentifier": "com.oriolfarras.frontend"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.oriolfarras.frontend"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "La app necesita acceso a tu galería para que puedas subir una foto de perfil",
          "cameraPermission": "La app necesita acceso a tu cámara para que puedas tomar una foto de perfil"
        }
      ]
    ]
  }
}
